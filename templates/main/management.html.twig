{% extends 'base.html.twig' %}

{% block title %}Hello CreateController!{% endblock %}

{% block body %}
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="mb-4"><strong>Meal List</strong></h4>
        <div>
            <button type="button" class="btn btn-info btn-sm px-3 py-2"><i class="fas fa-plus mr-2"></i>Create</button>
        </div>
    </div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Category</th>
                <th scope="col">Area</th>
                <th scope="col">Image</th>
            </tr>
        </thead>
        <tbody>
        {% for meal in meals %}
            <tr>
                <th scope="row">{{ meal.id }}</th>
                <td>{{ meal.name }}</td>
                <td>{{ meal.category }}</td>
                <td>{{ meal.area }}</td>
                <td><img src="{{ meal.image }}" alt="{{ meal.name }}"height="25"></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
